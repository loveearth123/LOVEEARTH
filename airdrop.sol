contract LECAirdrop is Ownable{
     using SafeMath for uint256;
    
    uint256  public id = 0;
    struct Airdrop{
        uint256 endTime;
        uint256 airdropCoinNumber;
        uint256 airdropCoinTatol;
        uint256 hasairdropNumber;
    }
    
    mapping(address => bool) public admin;
    modifier onlyAdmin {
        require (admin[msg.sender]);
        _;
    }
    
    IERC20 LECtoken;
    
    mapping(uint256 => Airdrop) public airdropMap;
    mapping(address => bool) public airdropUserMap;
    
    event newAirDropEvent( uint256 endTime_, uint256 airdropCoiNumber_, uint256 airdropCoinTatol_);
    event userReceiveAirdrop(address user,uint256 number,uint256 timestamp);
    event EmergencyStop(address indexed user, address to, uint256 amount);
    
    constructor(IERC20 lec){
        LECtoken = lec;
    }

    function setAdmin(address _admin)public onlyOwner{
        admin[_admin]=true;
    }
    function delAdmin(address _admin)public onlyOwner{
        admin[_admin]=false;
    }
    
    function newAirDrop( uint256 endTime_, uint256 airdropCoinNumber_, uint256 airdropCoinTatol_)external onlyAdmin{
        
        require(airdropCoinTatol_ > 0,"airdropCoinTatol_ cannot be 0!");
        LECtoken.transferFrom(msg.sender, address(this), airdropCoinTatol_);
        require(LECtoken.balanceOf(address(this))>=airdropCoinTatol_, "newAirDrop faild!");
        
        Airdrop  storage newairdrop  = airdropMap[id+1];
        newairdrop.endTime = endTime_.add(uint256(block.timestamp));
        newairdrop.airdropCoinNumber = airdropCoinNumber_;
        newairdrop.airdropCoinTatol = airdropCoinTatol_;
        id += 1;
        emit newAirDropEvent(endTime_, airdropCoinNumber_, airdropCoinTatol_);
    }
    
    function receiveAirdrop(uint256 id_)external{
        Airdrop  storage airdrop  = airdropMap[id_];
        require(block.timestamp <= airdrop.endTime,"Airdrop is end !");
        require(airdrop.airdropCoinTatol.sub(airdrop.hasairdropNumber).sub(airdrop.airdropCoinNumber) >= 0,"this airdrop is end!");
        require(!airdropUserMap[msg.sender],"You has recieved!");
        
        LECtoken.transfer(msg.sender,airdrop.airdropCoinNumber);
        airdropUserMap[msg.sender] = true;
        
        airdrop.hasairdropNumber  += airdrop.airdropCoinNumber;
        
        if (airdrop.airdropCoinTatol.sub(airdrop.hasairdropNumber) < airdrop.airdropCoinNumber){
            airdrop.endTime = block.timestamp;
        }
        
        emit userReceiveAirdrop(msg.sender,airdrop.airdropCoinNumber ,block.timestamp);
        
    }
    
      function TokenTransferOut(IERC20 _token,address _to,uint256 amount)public onlyOwner{
          require(amount > 0, "amount cannot be 0");
          _token.transfer(_to,amount);
           emit EmergencyStop(address(this),_to,amount);
    }
}
